{
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  "unocss.root": ".",
  "unocss.disable": false,

  "prettier.enable": false,

  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "cSpell.language": "en",

  "files.associations": {
    "*.mdx": "markdown"
  }
}